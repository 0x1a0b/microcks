{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "template": "microcks-ephemeral-template"
  },
  "metadata": {
    "annotations": {
      "description": "Template for Microcks application (see http://microcks.github.io)",
      "iconClass": "icon-java",
      "tags": "instant-app"
    },
    "labels": {},
    "name": "microcks-ephemeral"
  },
  "parameters": [
    {
      "name": "APP_NAME",
      "value": "microcks",
      "description": "Application Name",
      "required": true
    },
    {
      "name": "SERVICE_NAME",
      "displayName": "App Service Name",
      "description": "The name of the OpenShift Service exposed.",
      "value": "microcks",
      "required": true
    },
    {
      "name": "DATABASE_SERVICE_NAME",
      "displayName": "Database Service Name",
      "description": "The name of the OpenShift Service exposed for the database.",
      "value": "microcks-mongodb",
      "required": true
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Memory Limit",
      "description": "Maximum amount of memory the container can use.",
      "value": "512Mi"
    },
    {
      "name": "MONGODB_MEMORY_LIMIT",
      "displayName": "MongoDB Memory Limit",
      "description": "Maximum amount of memory the container can use.",
      "value": "512Mi"
    },
    {
      "name": "MONGODB_USER",
      "displayName": "MongoDB Connection Username",
      "description": "Username for MongoDB user that will be used for accessing the database.",
      "generate": "expression",
      "from": "user[A-Z0-9]{3}",
      "required": true
    },
    {
      "name": "MONGODB_PASSWORD",
      "displayName": "MongoDB Connection Password",
      "description": "Password for the MongoDB connection user.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "MONGODB_ADMIN_PASSWORD",
      "displayName": "MongoDB Admin Password",
      "description": "Password for the database admin user.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "NAMESPACE",
      "displayName": "Namespace for MongoDB",
      "description": "The OpenShift Namespace where the MongoDB ImageStream resides.",
      "value": "openshift"
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "app": "${APP_NAME}",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        }
      },
      "spec": {
        "tags": [
          {
            "name": "latest",
            "from": {
              "kind": "DockerImage",
              "name": "lbroudoux/microcks:latest"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}-postman-runtime",
        "labels": {
          "app": "${APP_NAME}",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        }
      },
      "spec": {
        "tags": [
          {
            "name": "latest",
            "from": {
              "kind": "DockerImage",
              "name": "lbroudoux/microcks-postman-runtime:latest"
            }
          }
        ]
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "annotations": {},
        "labels": {
          "container": "spring",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        },
        "name": "${APP_NAME}"
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "name": "spring"
          }
        ],
        "type": "ClusterIP",
        "sessionAffinity": "None",
        "selector": {
          "container": "spring",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "annotations": {},
        "labels": {
          "container": "postman-runtime",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        },
        "name": "${APP_NAME}-postman-runtime"
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 3000,
            "name": "postman-runtime"
          }
        ],
        "type": "ClusterIP",
        "sessionAffinity": "None",
        "selector": {
          "container": "postman-runtime",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DATABASE_SERVICE_NAME}",
        "labels": {
          "container": "mongodb",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        },
        "creationTimestamp": null
      },
      "spec": {
        "ports": [
          {
            "name": "mongodb",
            "protocol": "TCP",
            "port": 27017,
            "targetPort": 27017,
            "nodePort": 0
          }
        ],
        "selector": {
          "container": "mongodb",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "${APP_NAME}"
        },
        "port": {
          "targetPort": "spring"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "container": "spring",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "spring"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APP_NAME}:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${APP_NAME}",
          "container": "spring",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${APP_NAME}",
              "container": "spring",
              "project": "${APP_NAME}",
              "component": "${APP_NAME}",
              "group": "microcks"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "spring",
                "image": "${APP_NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "SPRING_PROFILES_ACTIVE",
                    "value": "prod"
                  },
                  {
                    "name": "SPRING_DATA_MONGODB_URI",
                    "value": "mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${DATABASE_SERVICE_NAME}:27017/${SPRING_DATA_MONGODB_DATABASE}"
                  },
                  {
                    "name": "SPRING_DATA_MONGODB_DATABASE",
                    "value": "${APP_NAME}"
                  },
                  {
                    "name": "POSTMAN_RUNNER_URL",
                    "value": "http://${APP_NAME}-postman-runtime:8080"
                  },
                  {
                    "name": "TEST_CALLBACK_URL",
                    "value": "http://${APP_NAME}:8080"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${MEMORY_LIMIT}"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/api/jobs",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 15,
                  "timeoutSeconds": 3,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/api/jobs",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 20,
                  "timeoutSeconds": 3,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}-postman-runtime",
        "labels": {
          "container": "postman-runtime",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "postman-runtime"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APP_NAME}-postman-runtime:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentconfig": "${APP_NAME}-postman-runtime",
          "container": "postman-runtime",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "group": "microcks"
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "${APP_NAME}-postman-runtime",
              "container": "postman-runtime",
              "project": "${APP_NAME}",
              "component": "${APP_NAME}",
              "group": "microcks"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "postman-runtime",
                "image": "${APP_NAME}-postman-runtime",
                "ports": [
                  {
                    "containerPort": 3000,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "LOG_LEVEL",
                    "value": "info"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "256Mi"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/health",
                    "port": 3000,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 4,
                  "timeoutSeconds": 3,
                  "periodSeconds": 20,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/health",
                    "port": 3000,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 5,
                  "timeoutSeconds": 3,
                  "periodSeconds": 20,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}-mongodb",
        "labels": {
          "container": "mongodb",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        },
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "mongodb"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "mongodb:3.2",
                "namespace": "${NAMESPACE}"
              },
              "lastTriggeredImage": ""
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentconfig": "mongodb",
          "container": "mongodb",
          "component": "${APP_NAME}",
          "project": "${APP_NAME}",
          "group": "microcks"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "deploymentconfig": "mongodb",
              "container": "mongodb",
              "component": "${APP_NAME}",
              "project": "${APP_NAME}",
              "group": "microcks"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "mongodb",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 27017,
                    "protocol": "TCP"
                  }
                ],
                "readinessProbe": {
                  "timeoutSeconds": 1,
                  "initialDelaySeconds": 3,
                  "exec": {
                    "command": [ "/bin/sh", "-i", "-c", "mongo 127.0.0.1:27017/$MONGODB_DATABASE -u $MONGODB_USER -p $MONGODB_PASSWORD --eval=\"quit()\""]
                  }
                },
                "livenessProbe": {
                  "timeoutSeconds": 1,
                  "initialDelaySeconds": 30,
                  "tcpSocket": {
                    "port": 27017
                  }
                },
                "env": [
                  {
                    "name": "MONGODB_USER",
                    "value": "${MONGODB_USER}"
                  },
                  {
                    "name": "MONGODB_PASSWORD",
                    "value": "${MONGODB_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${MONGODB_ADMIN_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_DATABASE",
                    "value": "${APP_NAME}"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "${MONGODB_MEMORY_LIMIT}"
                  }
                },
                "volumeMounts": [
                  {
                    "name": "${DATABASE_SERVICE_NAME}-data",
                    "mountPath": "/var/lib/mongodb/data"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "volumes": [
              {
                "name": "${DATABASE_SERVICE_NAME}-data",
                "emptyDir": {
                  "medium": ""
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      },
      "status": {}
    }
  ]
}
